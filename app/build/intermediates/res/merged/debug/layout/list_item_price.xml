<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y2"
        android:paddingLeft="@dimen/y8"
        android:paddingRight="@dimen/y8"
        android:paddingTop="@dimen/y2" >

        <RelativeLayout
            android:layout_width="@dimen/x55"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/no_image_big_show_2" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5" >

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_03"
                    android:layout_width="@dimen/x48"
                    android:layout_height="@dimen/x24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x5"
                    android:background="@drawable/green_btn_selector"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@color/main_color"
                    android:textSize="16dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textSize="@dimen/y11" />

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/red"
                        android:textSize="@dimen/y11" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginTop="@dimen/x5"
                android:layout_weight="1" >

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/y9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:visibility="gone" >

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/little_gray"
                    android:textSize="@dimen/y9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:visibility="gone" >

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/little_gray"
                    android:textSize="@dimen/y9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:visibility="gone" >

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_pu_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/little_gray"
                    android:textSize="@dimen/y9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_status_01"
                    android:layout_width="@dimen/y20"
                    android:layout_height="@dimen/y10"
                    android:layout_margin="@dimen/x1"
                    android:background="@drawable/r_o_status01"
                    android:gravity="center"
                    android:text="自营"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y7"
                    android:visibility="gone" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_status_02"
                    android:layout_width="@dimen/y10"
                    android:layout_height="@dimen/y10"
                    android:layout_margin="@dimen/x1"
                    android:background="@drawable/r_o_status02"
                    android:gravity="center"
                    android:text="返"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y7"
                    android:visibility="gone" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_status_03"
                    android:layout_width="@dimen/y10"
                    android:layout_height="@dimen/y10"
                    android:layout_margin="@dimen/x1"
                    android:background="@drawable/r_o_status03"
                    android:gravity="center"
                    android:text="担"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y7"
                    android:visibility="gone" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_status_04"
                    android:layout_width="@dimen/y10"
                    android:layout_height="@dimen/y10"
                    android:layout_margin="@dimen/x1"
                    android:background="@drawable/r_o_status04"
                    android:gravity="center"
                    android:text="免"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y7"
                    android:visibility="gone" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_status_05"
                    android:layout_width="@dimen/y10"
                    android:layout_height="@dimen/y10"
                    android:layout_margin="@dimen/x1"
                    android:background="@drawable/r_o_status02"
                    android:gravity="center"
                    android:text="免"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y7"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="@dimen/y10" />

                <ImageView
                    android:id="@+id/sc_ziying"
                    android:layout_width="@dimen/y22"
                    android:layout_height="@dimen/y10"
                    android:layout_margin="2.5dip"
                    android:src="@drawable/sc_ziying"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/sc_fuwufugai"
                    android:layout_width="@dimen/y46"
                    android:layout_height="@dimen/y10"
                    android:layout_margin="2.5dip"
                    android:src="@drawable/sc_fuwufugai"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/sc_hezuoshangjia"
                    android:layout_width="@dimen/y46"
                    android:layout_height="@dimen/y10"
                    android:layout_margin="2.5dip"
                    android:src="@drawable/sc_hezuoshangjia"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/sc_huodaofukuan"
                    android:layout_width="@dimen/y46"
                    android:layout_height="@dimen/y10"
                    android:layout_margin="2.5dip"
                    android:src="@drawable/sc_huodaofukuan"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:visibility="gone" >

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#FA0000" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/y7" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_07"
                    android:layout_alignBottom="@+id/tv_07"
                    android:layout_toRightOf="@+id/tv_07"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/y7" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_floorPrice"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:visibility="gone" >

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_floorPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#FA0000" />

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="@dimen/y12"
                    android:layout_height="@dimen/y12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/y10"
                    android:gravity="center_vertical"
                    android:src="@drawable/tuijian_hui" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/shangchuanshibai"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dip"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC" />

</LinearLayout>