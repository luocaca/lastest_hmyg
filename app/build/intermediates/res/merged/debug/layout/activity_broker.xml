<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".BrokerActivity" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/gray_bg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x175"
                android:background="@drawable/gerenzhongxin_beij"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/y34" >

                    <ImageView
                        android:id="@+id/iv_msg"
                        android:layout_width="@dimen/x25"
                        android:layout_height="@dimen/x23"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="我是经纪"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x18" />

                    <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="@dimen/x23"
                        android:layout_height="@dimen/x23"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x12"
                        android:src="@drawable/back_sel" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_icon_persion_pic"
                        android:layout_width="@dimen/x72"
                        android:layout_height="@dimen/x72"
                        android:layout_margin="@dimen/y7"
                        android:src="@drawable/icon_persion_pic" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y7"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x15" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_all_yanmiao_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y37"
                android:layout_marginTop="@dimen/y8"
                android:background="@drawable/btn_my_list"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x11"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="验苗订单"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:text="查看全部验苗订单"
                    android:textSize="@dimen/x15"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_set_but"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_yanmiao_01"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical" >

                    <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
                        android:id="@+id/ll_yanmiao_nei_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/y8"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/iv_yanmiao_01"
                            android:layout_width="@dimen/x24"
                            android:layout_height="@dimen/x24"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y4"
                            android:src="@drawable/icon_xinyanmiao" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y4"
                            android:text="新验苗"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/x12" />
                    </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_yanmiao_02"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical" >

                    <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
                        android:id="@+id/ll_yanmiao_nei_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/y8"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/iv_yanmiao_02"
                            android:layout_width="@dimen/x24"
                            android:layout_height="@dimen/x24"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y4"
                            android:src="@drawable/icon_yanmiaozhonng" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/y8"
                            android:layout_marginTop="@dimen/y4"
                            android:text="验苗中"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/x12" />
                    </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_yanmiao_03"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical" >

                    <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
                        android:id="@+id/ll_yanmiao_nei_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/y8"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/iv_yanmiao_03"
                            android:layout_width="@dimen/x24"
                            android:layout_height="@dimen/x24"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y4"
                            android:src="@drawable/icon_shenhe" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/y8"
                            android:layout_marginTop="@dimen/y4"
                            android:text="审核中"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/x12" />
                    </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_yanmiao_04"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical" >

                    <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
                        android:id="@+id/ll_yanmiao_nei_04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/y8"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/iv_yanmiao_04"
                            android:layout_width="@dimen/x24"
                            android:layout_height="@dimen/x24"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y4"
                            android:src="@drawable/icon_beituihui" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/y8"
                            android:layout_marginTop="@dimen/y4"
                            android:text="被退回"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/x12" />
                    </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_yanmiao_05"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical" >

                    <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
                        android:id="@+id/ll_yanmiao_nei_05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/y8"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/iv_yanmiao_05"
                            android:layout_width="@dimen/x24"
                            android:layout_height="@dimen/x24"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y4"
                            android:src="@drawable/icon_yiwancheng" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/y8"
                            android:layout_marginTop="@dimen/y4"
                            android:text="已验苗"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/x12" />
                    </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_all_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y37"
                android:layout_marginTop="@dimen/y8"
                android:background="@drawable/btn_my_list"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x11"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="我的订单"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:text="查看全部订单"
                    android:textSize="@dimen/x15"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_set_but"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_daifukuan"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/y8"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/x24"
                            android:layout_height="@dimen/x24"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y4"
                            android:src="@drawable/icon_jingji_xinfahuo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/y8"
                            android:layout_marginTop="@dimen/y4"
                            android:text="新发货"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/x12" />
                    </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_daifahuo"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical" >

                    <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
                        android:id="@+id/ll_daifahuo_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/y8"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/x24"
                            android:layout_height="@dimen/x24"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y4"
                            android:src="@drawable/daifahuo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/y8"
                            android:layout_marginTop="@dimen/y4"
                            android:text="待发货"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/x12" />
                    </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_daishouhuo"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical" >

                    <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
                        android:id="@+id/ll_daifahuo_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/y8"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/x24"
                            android:layout_height="@dimen/x24"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y4"
                            android:src="@drawable/daishouhuo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/y8"
                            android:layout_marginTop="@dimen/y4"
                            android:text="待收货"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/x12" />
                    </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_yiwancheng"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical" >

                    <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
                        android:id="@+id/ll_daifahuo_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/y8"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/x24"
                            android:layout_height="@dimen/x24"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y4"
                            android:src="@drawable/yiwancheng" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/y8"
                            android:layout_marginTop="@dimen/y4"
                            android:text="已完成"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/x12" />
                    </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y8"
                android:background="@color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_01"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/x24"
                        android:layout_height="@dimen/x24"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y15"
                        android:src="@drawable/wode_caigouxuqiu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/y15"
                        android:layout_marginTop="@dimen/y4"
                        android:text="采购需求"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/x15" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray_bg" />

                <LinearLayout
                    android:id="@+id/ll_02"
                    android:layout_width="0.0dip"
                    android:visibility="visible"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/x24"
                        android:layout_height="@dimen/x24"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y15"
                        android:src="@drawable/wode_pinzhongxuanjiax" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/y15"
                        android:layout_marginTop="@dimen/y4"
                        android:text="品种选价"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/x15" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray_bg" />

                <LinearLayout
                    android:id="@+id/ll_03"
                    android:layout_width="0.0dip"
                    android:visibility="invisible"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/x24"
                        android:layout_height="@dimen/x24"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y15"
                        android:src="@drawable/shouye_caigoubaojia" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/y15"
                        android:layout_marginTop="@dimen/y4"
                        android:text="快速报价"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/x15" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/gray_bg" />

                <LinearLayout
                    android:id="@+id/ll_04"
                    android:layout_width="0.0dip"
                    android:visibility="invisible"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_my_list"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/x24"
                        android:layout_height="@dimen/x24"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y15"
                        android:src="@drawable/icon_wodebaojia" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/y15"
                        android:layout_marginTop="@dimen/y4"
                        android:text="我的报价"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/x15" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>