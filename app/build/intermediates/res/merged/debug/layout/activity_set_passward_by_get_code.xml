<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".RegisterActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y34"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="重置密码"
            android:textColor="@color/main_color"
            android:textSize="@dimen/x18" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/btn_back" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/gray_bg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y34"
                android:layout_marginTop="@dimen/y9"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:scaleType="centerInside"
                    android:src="@drawable/login_phone" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_weight="1.0"
                    android:background="@color/transparent"
                    android:hint="@string/input_phone_number"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:minHeight="@dimen/x20"
                    android:singleLine="true"
                    android:textColor="@color/gray_edit_hint"
                    android:textColorHint="@color/gray_edit_hint"
                    android:textSize="@dimen/y11" />

                <ImageButton
                    android:id="@+id/btn_clear_num"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:padding="10.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/clear_icon"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y34"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:scaleType="centerInside"
                    android:src="@drawable/code" />

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_weight="1.0"
                    android:background="@color/transparent"
                    android:hint="@string/phone_code"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:minHeight="@dimen/x20"
                    android:singleLine="true"
                    android:textColor="@color/gray_edit_hint"
                    android:textColorHint="@color/gray_edit_hint"
                    android:textSize="@dimen/y11" />

                <Button
                    android:id="@+id/btn_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:background="@null"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="2.5dip"
                    android:text="获取验证码"
                    android:textColor="@color/main_color"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y34"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:scaleType="centerInside"
                    android:src="@drawable/regisrer_passward" />

                <EditText
                    android:id="@+id/et_passward"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_weight="1.0"
                    android:background="@color/transparent"
                    android:hint="@string/input_passward"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:minHeight="@dimen/x20"
                    android:singleLine="true"
                    android:textColor="@color/gray_edit_hint"
                    android:textColorHint="@color/gray_edit_hint"
                    android:textSize="@dimen/y11" />

                <ImageButton
                    android:id="@+id/btn_clear_password"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:padding="10.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/clear_icon"
                    android:visibility="gone" />
            </LinearLayout>

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/set_passward"
                style="@style/NoActionBarTheme.TextHuaWenXiHei"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/x37"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/register_btn_selector"
                android:enabled="false"
                android:gravity="center"
                android:text="确认修改"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/main_color"
                android:textSize="@dimen/y11" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>